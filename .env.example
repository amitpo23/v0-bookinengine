# Medici Hotels API
MEDICI_BASE_URL=https://medici-backend.azurewebsites.net
MEDICI_TOKEN=your_medici_api_token_here

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email (Resend)
RESEND_API_KEY=your_resend_api_key

# Hotel Data Enrichment (Optional - for missing hotel data)
# Get your key from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your_google_places_api_key_optional

# Alternative search engine (Optional)
# Get your key from: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_SEARCH_API_KEY=your_bing_search_api_key_optional

# Demo Mode (set to false to use real Medici API)
NEXT_PUBLIC_DEMO_MODE=true
