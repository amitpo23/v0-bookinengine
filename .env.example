# Medici Hotels API
MEDICI_BASE_URL=https://medici-backend.azurewebsites.net
MEDICI_TOKEN=your_medici_api_token_here

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email (Resend)
RESEND_API_KEY=your_resend_api_key

# Hotel Data Enrichment (Optional - for missing hotel data)
# Get your key from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your_google_places_api_key_optional

# Alternative search engine (Optional)
# Get your key from: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_SEARCH_API_KEY=your_bing_search_api_key_optional

# Tavily API (Optional - for enhanced hotel information via Sunday components)
# Get your key from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# Google Trends & Flights (Optional - NEW!)
# Option 1: SerpAPI (supports both Trends + Flights)
SERPAPI_KEY=your_serpapi_key_here
# Option 2: Amadeus (for flights only)
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_API_URL=https://test.api.amadeus.com
FLIGHT_API_PROVIDER=amadeus

# AI/LLM Providers (Optional)
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
GROQ_API_KEY=your_groq_key
AI_PROVIDER=groq

# Demo Mode (set to true for testing, false for production)
NEXT_PUBLIC_DEMO_MODE=false

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
